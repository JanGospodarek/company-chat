{
    "name": "Miau - Backend",

    "dockerComposeFile": "../../docker-compose.dev.yml",
    "service": "backend",
    "workspaceFolder": "/app/backend",

    "runServices": ["frontend", "backend", "web", "db"],
    "shutdownAction": "none",

    "customizations": {
        "vscode": {
            "extensions": [
                "github.copilot",
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "usernamehw.errorlens",
                "yoavbls.pretty-ts-errors"
            ]
        }
    }
}